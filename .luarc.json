{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "path": ["?.lua", "?/init.lua", "lua/?.lua", "lua/?/init.lua"]
  },
  "diagnostics": {
    "globals": ["vim", "describe", "it", "before_each", "after_each", "assert", "spy", "stub", "mock"]
  },
  "workspace": {
    "library": [
      "${3rd}/luv/library",
      "${3rd}/busted/library"
    ],
    "checkThirdParty": false
  },
  "telemetry": {
    "enable": false
  },
  "hint": {
    "enable": true,
    "setType": true
  }
}
